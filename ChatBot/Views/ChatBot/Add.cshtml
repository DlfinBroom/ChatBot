@model Responce

@{
    ViewData["Title"] = "Add";
}

<h1>Add</h1>

@if (ViewData["Added"] != null)
{
    <h3 class="text-success">@ViewData["Added"]</h3>
}
@if (ViewData["ErrorMsg"] != null)
{
    <h3 class="text-warning">@ViewData["ErrorMsg"]</h3>
}
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input" class="control-label"></label>
                <input asp-for="Input" class="form-control" />
                <span asp-validation-for="Input" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Output" class="control-label"></label>
                <input asp-for="Output" class="form-control" />
                <span asp-validation-for="Output" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add Responce" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Responces">Back to List</a>
</div>

